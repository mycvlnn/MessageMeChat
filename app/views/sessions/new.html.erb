<div class="container h-100">
  <div class="row justify-content-center align-items-center h-100">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-lg border-0">
        <div class="card-body p-5">
          <!-- Heading -->
          <h2 class="text-center mb-4 fw-bold text-primary px-2">
            <%= t('auth.login.title') %>
          </h2>
          
          <!-- Login Icon -->
          <div class="text-center mb-3">
            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-person-circle text-primary" viewBox="0 0 16 16">
              <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
              <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
            </svg>
          </div>
          
          <!-- Login to continue text -->
          <p class="text-center text-muted mb-4"><%=t('auth.login.subtitle')%></p>
          
          <!-- Login Form -->
          <%= form_with(url: login_path, method: :post, local: true, class: "needs-validation") do |f| %>
            
            <!-- Username Field -->
            <div class="mb-3">
              <%= f.label :username, t('auth.login.username'), class: "form-label fw-semibold" %>
              <%= f.text_field :username, 
                    class: "form-control form-control-lg",
                    placeholder: t('auth.login.username_placeholder'), 
                    autofocus: true, 
                    required: true 
              %>
            </div>
            
            <!-- Password Field -->
            <div class="mb-4">
              <%= f.label :password, t('auth.login.password'), class: "form-label fw-semibold" %>
              <%= f.password_field :password, 
                    class: "form-control form-control-lg", 
                    placeholder: t('auth.login.password_placeholder'), 
                    required: true 
              %>
            </div>
            
            <!-- Login Button -->
            <div class="d-grid mb-3">
              <%= f.submit t('auth.login.submit'), class: "btn btn-lg btn-primary-gradient" %>
            </div>
            
            <!-- Signup Link -->
            <div class="text-center">
              <p class="text-muted mb-0">
                <%= t('auth.login.no_account') %>
                <%= link_to t('auth.login.signup_link'), signup_path, class: "text-decoration-none fw-semibold" %>
              </p>
            </div>
            
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

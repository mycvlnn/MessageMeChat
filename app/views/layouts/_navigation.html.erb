<nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
    <div class="container-fluid px-4">
        <%= link_to t('app_name'), root_path, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <%= link_to t('navigation.chatroom'), root_path, class: 'nav-link active' %>
                </li>
            </ul>
            <div class="d-flex gap-3 align-items-center">
                <div class="dropdown">
                    <button
                        class="btn btn-outline-secondary dropdown-toggle"
                        type="button"
                        data-bs-toggle="dropdown"
                        aria-expanded="false"
                        style="min-width: 120px;"
                    >
                        <%= LANGUAGES[I18n.locale] %>
                    </button>

                    <ul class="dropdown-menu">
                        <% LANGUAGES.each do |locale, label| %>
                        <li>
                            <% if I18n.locale == locale %>
                                <span class="dropdown-item active d-flex align-items-center gap-2">
                                    <%= label %>
                                </span>
                            <% else %>
                                <%= link_to label, url_for(locale: locale), class: "dropdown-item d-flex align-items-center gap-2" %>
                            <% end %>
                        </li>
                        <% end %>
                    </ul>
                </div>

                <% if logged_in? %>
                    <span class="text-white">Hello, <%= current_user.username %></span>
                    <%= link_to t('navigation.logout'), logout_path, class: 'btn btn-outline-secondary', method: :delete %>
                <% else %>
                    <%= link_to t('navigation.login'), login_path, class: 'btn btn-primary-gradient' %>
                <% end %>
              
            </div>
        </div>
    </div>
</nav>

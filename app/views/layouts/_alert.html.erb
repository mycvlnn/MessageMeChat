 <% flash.each do |name, msg| %>
      <div class="alert alert-<%= name == 'error' ? 'danger' : 'success' %> alert-dismissible fade show text-center mb-0" role="alert">
        <%= msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
<% end %>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-lg border-0">
        <div class="card-body p-5">
          <!-- Heading -->
          <h2 class="text-center mb-4 fw-bold text-primary px-2">
            <%= t('auth.signup.title') %>
          </h2>
          
          <!-- Signup Icon -->
          <div class="text-center mb-3">
            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-person-plus-fill text-primary" viewBox="0 0 16 16">
              <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
              <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
            </svg>
          </div>
          
          <!-- Signup text -->
          <p class="text-center text-muted mb-4"><%= t('auth.signup.subtitle') %></p>
          
          <!-- Error Messages -->
          <%= render 'shared/errors', object: @user %>
          
          <!-- Signup Form -->
          <%= form_with(model: @user, url: signup_path, method: :post, local: true, class: "needs-validation") do |f| %>
            
            <!-- Username Field -->
            <div class="mb-3">
              <%= f.label :username, t('auth.signup.username'), class: "form-label fw-semibold" %>
              <%= f.text_field :username, class: "form-control form-control-lg", placeholder: t('auth.signup.choose_a_user_name'), autofocus: true, required: true %>
              <div class="form-text"><%= t('auth.signup.username_hint') %></div>
            </div>
            
            <!-- Password Field -->
            <div class="mb-3">
              <%= f.label :password, class: "form-label fw-semibold" %>
              <%= f.password_field :password, class: "form-control form-control-lg", placeholder: t('auth.signup.choose_a_password'), required: true %>
            </div>
            
            <!-- Password Confirmation Field -->
            <div class="mb-4">
              <%= f.label :password_confirmation, t('auth.signup.password_confirmation'), class: "form-label fw-semibold" %>
              <%= f.password_field :password_confirmation, class: "form-control form-control-lg", placeholder: t('auth.signup.confirm_your_password'), required: true %>
            </div>
            
            <!-- Signup Button -->
            <div class="d-grid mb-3">
              <%= f.submit t('auth.signup.submit'), class: "btn btn-success btn-lg btn-signup" %>
            </div>
            
            <!-- Login Link -->
            <div class="text-center">
              <p class="text-muted mb-0">
                <%= t('auth.signup.have_account') %>
                <%= link_to t('auth.signup.login_link'), login_path, class: "text-decoration-none fw-semibold" %>
              </p>
            </div>
            
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

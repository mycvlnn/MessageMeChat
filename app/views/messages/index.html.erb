<div class="chat-container">
  <%= render 'shared/chat_sidebar' %>
  
  <!-- Chat Window -->
  <div class="chat-window">
    <!-- Chat Header -->
    <div class="chat-header">
      <div class="d-flex align-items-center">
        <div class="avatar-circle me-3">
          <%= @opposed_user.username.first.upcase %>
        </div>
        <h5 class="mb-0"><%= @opposed_user.username %></h5>
      </div>
      <div class="header-actions">
        <button class="btn btn-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"/>
          </svg>
        </button>
        <button class="btn btn-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
            <path d="M0 5a2 2 0 0 1 2-2h7.5a2 2 0 0 1 1.983 1.738l3.11-1.382A1 1 0 0 1 16 4.269v7.462a1 1 0 0 1-1.406.913l-3.111-1.382A2 2 0 0 1 9.5 13H2a2 2 0 0 1-2-2V5z"/>
          </svg>
        </button>
        <button class="btn btn-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
            <circle cx="8" cy="8" r="1"/>
            <circle cx="8" cy="4" r="1"/>
            <circle cx="8" cy="12" r="1"/>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Messages Area -->
    <div class="messages-area" id="messagesArea" data-conversation-id="<%= @conversation.id %>" data-current-user-id="<%= current_user.id %>" data-opposed-user-id="<%= @opposed_user.id %> " >
      <% if @messages.empty? %>
        <div class="empty-conversation" style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100%; color: #65676b;">
          <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" viewBox="0 0 16 16" style="opacity: 0.5; margin-bottom: 16px;">
            <path d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z"/>
          </svg>
          <p style="font-size: 1.125rem; font-weight: 500; margin-bottom: 8px;">No messages yet</p>
          <p style="font-size: 0.875rem; opacity: 0.7;">Start the conversation with <%= @opposed_user.username %></p>
        </div>
      <% else %>
        <% @messages.each do |message| %>
          <div class="message-wrapper <%= message.user == current_user ? 'sent' : 'received' %>" data-message-id="<%= message.id %>">
            <% unless message.user == current_user %>
              <div class="message-avatar">
                <div class="avatar-circle-sm">
                  <%= message.user.username.first.upcase %>
                </div>
              </div>
            <% end %>
            <div class="message-bubble">
              <%= message.body %>
              <% if message.user == current_user && message == @last_message && message.read? %>
                <small class="read-indicator text-muted ms-2" style="display: block; font-size: 0.75rem;">
                  Seen at <%= message.read_at.strftime('%H:%M') %>
                </small>
              <% end %>
            </div>
            <% if message.user == current_user %>
              <div class="message-avatar">
                <div class="avatar-circle-sm">
                  <%= current_user.username.first.upcase %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
    
    <!-- Message Input -->
    <div class="message-input-area" style="position: relative;">
      <!-- Typing Indicator -->
      <div id="typingIndicator" class="typing-indicator" style="visibility: hidden; position: absolute; bottom: 100%; left: 20px; margin-bottom: 8px; padding: 8px 12px; background-color: #f0f2f5; border-radius: 18px; font-size: 0.875rem; color: #65676b;"></div>
      
      <%= form_with(model: [@conversation, @message], local: false, class: "d-flex align-items-center") do |f| %>
        <button type="button" class="btn btn-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
            <path d="M4.285 9.567a.5.5 0 0 1 .683.183A3.498 3.498 0 0 0 8 11.5a3.498 3.498 0 0 0 3.032-1.75.5.5 0 1 1 .866.5A4.498 4.498 0 0 1 8 12.5a4.498 4.498 0 0 1-3.898-2.25.5.5 0 0 1 .183-.683zM7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5zm4 0c0 .828-.448 1.5-1 1.5s-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5z"/>
          </svg>
        </button>
        
        <%= f.text_field :body, class: "form-control message-input", placeholder: "Message", autocomplete: "off" %>
        
        <button type="button" class="btn btn-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z"/>
            <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z"/>
          </svg>
        </button>
        
        <%= f.submit "Send", class: "btn btn-primary ms-2" %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'shared/new_conversation_modal' %>